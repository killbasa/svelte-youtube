{
	"name": "svelte-yt",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/svelte-yt.git"
	},
	"homepage": "https://github.com/killbasa/svelte-yt",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && bun run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "bun run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint src --ext ts,svelte",
		"lint:fix": "eslint . --fix",
		"format": "prettier --check .",
		"format:fix": "prettier --write ."
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/package": "^2.0.0",
		"@types/node": "^20.6.4",
		"@types/youtube": "^0.0.47",
		"@typescript-eslint/eslint-plugin": "^6.7.2",
		"@typescript-eslint/parser": "^6.7.2",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-svelte": "^2.33.2",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"publint": "^0.1.9",
		"svelte-check": "^3.4.3",
		"svelte-eslint-parser": "^0.33.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext mjs,cjs,js,ts",
			"prettier --write \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.svelte": [
			"eslint --fix --ext svelte",
			"prettier --write --loglevel=warn \"**/*.svelte\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write \"**/*.{json,yml,yaml,md}\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"publishConfig": {
		"access": "public"
	}
}
